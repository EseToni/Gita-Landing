---
import { Image } from "astro:assets"

import Layout from "@layouts/Layout.astro"
import Navbar from "@components/Navbar.astro"
import panter from "@img/panter.png"
---

<style is:inline>
	.blur_bg{
		filter: blur(10px);
	}
	.path {
		clip-path: polygon(
			30% 41%,
			28% 24%,
			30% 6%,
			37% 10%,
			44% 12%,
			49% 9%,
			69% 15%,
			79% 13%,
			98% 09%,
			96% 26%,
			93% 38%,
			100% 47%,
			97% 51%,
			99% 54%,
			91% 64%,
			79% 71%,
			90% 88%,
			89% 100%,
			67% 99%,
			53% 99%,
			38% 99%,
			29% 100%,
			12% 98%,
			0% 88%,
			30% 74%,
			15% 59%,
			17% 49%
		);
	}
</style>
<Layout title="Welcome to Astro.">
	<Navbar />
	<div class="absolute -top-1/4 left-0  rounded-xl rotate-45 w-[10px] h-[700px]  bg-slate-800 blur-sm"></div>
	<div class="absolute -top-2/4 left-0 rounded-xl rotate-45 w-[10px] h-[1400px] bg-slate-800 blur-sm"></div>
	<div class="absolute -top-2/4 left-0 rounded-xl rotate-45 w-[10px] h-[1800px] bg-slate-800 blur-sm"></div>

	<main class="w-3/4  relative">
		<div
			class="mt-32 flex flex-col md:flex-row gap-2 md:gap-4 md:items-baseline border-[var(--color-bg-second)] shadow-lg backdrop-blur-sm border-2 px-6 py-4 rounded-xl"
		>
			<h1
				class="text-4xl md:text-5xl font-bold tracking-tighter text-[var(--color-pink)]"
			>
				CLI automation tool
			</h1>
			<p class="text-lg text-center md:text-left">
				Automate your git CLI commands with a simple and easy to use tool.
			</p>
		</div>
		<!-- <div class="absolute bottom-[70px] -left-12 w-[350px] h-[400px] bg-[var(--color-pink)] path "></div> -->
		<Image
			src={panter}
			alt="Astro Logo"
			class="absolute bottom-10 md:bottom-14 md:-left-[22%] w-[700px] 2xl:w-[900px] bg-red-200 path "
		/>
	</main>
</Layout>
